package com.assignment.shoppingcart.microservices.orderservice.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.assignment.shoppingcart.microservices.orderservice.exception.EmptyCartException;
import com.assignment.shoppingcart.microservices.orderservice.repository.OrderService;

@RestController
@RequestMapping("v1/order")
public class OrderServiceController {

	@Autowired
	private OrderService orderService;
	
	@GetMapping
	public boolean checkoutCustomerOrder(@PathVariable("id") Long id) {
		boolean orderStatus = orderService.checkoutCustomerOrder(id);
		if(orderStatus == false) {
			throw new EmptyCartException("id -> "+id);
		}
		return orderStatus;
	}
	
	
}
