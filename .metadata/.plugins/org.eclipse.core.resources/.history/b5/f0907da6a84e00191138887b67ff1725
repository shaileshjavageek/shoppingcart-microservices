package com.assignment.shoppingcart.microservices.inventoryservice.proxy;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.assignment.shoppingcart.microservices.inventoryservice.model.dtos.ProductDTO;

@FeignClient(name = "product-service", decode404 = true)
public interface ProductServiceProxy {
	
	@GetMapping("/{id}")
	public ProductDTO getProductById(@PathVariable("id") Long id);

}
